<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the statistics page -->
<main class="flex-fill">
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            
            <div class="p-6 text-center bg-light">
                <h1 class="display-4"><%= title %></h1></div> 

            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-12">
                        Survey Name: <%= survey.surveyName %>
                    </th>
                </tr>

                <% for(let count = 0; count < survey.questions.length; count++) { %>
                    <tr class="d-flex">
                        <th class="text-left col-12">
                            Question Title: <%= survey.questions[count].title %>
                        </th>
                    </tr>
                    <% for(let optionsIndex = 0; optionsIndex < survey.questions[count].options.length; optionsIndex++) { %>
                        <tr class="d-flex"></tr>
                        <th class="text-left col-12">
                            Option Title: <%= survey.questions[count].options[optionsIndex].title %> 
                            Count: <%= survey.questions[count].options[optionsIndex].count %> 
                        </th>
                        </tr> 
                    <% } %>
                <% } %>
            </table>

            <button class="btn btn-info" onclick="window.print()">Print</button>
            <br>
            <br>
            <br>
            <br>
            
        </div>

    </div>
</div>

</main>


